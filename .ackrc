--context
--pager=less -FRSX
--smart-case
--sort-files

--ignore-file=match:/[.-]min[.]js$/
--ignore-file=match:/[.-]min[.]css$/
--ignore-file=match:/yarn.lock$/

--ignore-dir=flow-typed
--ignore-dir=coverage
--ignore-dir=dist
--ignore-dir=vendor

--type-set=erb=.erb
--type-set=haml=.haml
--type-set=mdown=.mdown
--type-set=scss=.scss
--type-set=txt=.txt
